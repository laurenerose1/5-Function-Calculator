puts "Please enter your first number: "
num1 = gets.chomp().to_f # get input and convert to floating point
puts "Enter your operator ( +, -, %, *, /):  "
op = gets.chomp()
puts "Enter your second number number: "
num2 = gets.chomp().to_f

if op == "+"
    puts (num1 + num2)
elsif op == "-"
    puts (num1 - num2)
elsif op == "/"
    puts (num1 / num2)
elsif op == "*"
    puts (num1 * num2)
elsif op == "%"
    puts (num1 % num2)
else
    puts "Invalid Operator, please try again."

end